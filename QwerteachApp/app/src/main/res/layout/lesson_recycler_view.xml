<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:background="@drawable/light_text_view_bottom_border">

    <LinearLayout
        android:id="@+id/lesson_management_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/accept_lesson_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/check"
            android:background="@color/white"/>

        <ImageButton
            android:id="@+id/refuse_lesson_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/close"
            android:background="@color/white" />

        <ImageButton
            android:id="@+id/update_lesson_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/update_lesson_button"
            android:src="@drawable/pencil_box_outline"
            android:background="@color/white" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/lesson_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_grey"/>

            <TextView
                android:id="@+id/lesson_topic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_grey"/>

            <TextView
                android:id="@+id/lessons_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_grey"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/to_unlock_lessons_buttons_management"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/lock_payment_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Signaler un problème"
            android:background="@android:color/transparent"
            android:textColor="@color/colorPrimary"/>

        <Button
            android:id="@+id/pay_teacher_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Très bien"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="right"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/to_review_lessons_buttons_management"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/review_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Laisser une évaluation"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/colorPrimaryDark"
            android:layout_alignParentRight="true"/>


    </RelativeLayout>

</LinearLayout>