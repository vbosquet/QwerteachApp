<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_student_lessons_list_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qwerteach.wivi.qwerteachapp.MyLessonsActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/no_lessons_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_lessons_title"
        android:visibility="gone"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="17dp"
        android:layout_marginTop="25dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/lesson_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</android.support.design.widget.CoordinatorLayout>